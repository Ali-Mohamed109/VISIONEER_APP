<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2F6"
    tools:context=".Reset_Code">

    <View
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="#067381"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="367dp"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aaaf" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/arc_3" />


    <androidx.cardview.widget.CardView
        android:layout_width="356dp"
        android:layout_height="369dp"
        android:layout_margin="35dp"
        android:background="@drawable/custom_edittext"
        android:foregroundGravity="center"
        app:cardCornerRadius="35dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="27dp">

            <TextView
                android:id="@+id/resetcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Reset Code"
                android:textAlignment="center"
                android:textColor="#494848"
                android:textSize="35sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textdesk"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="You can reset your password by entering the code that was sent to you in your Gmail"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/Entercode"
                style="@style/Widget.Material3.TextInputEditText.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:drawablePadding="8dp"
                android:hint="Enter the code"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <Button
                android:id="@+id/password_Button"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#067381"
                android:text="Reset Password"
                android:textSize="18sp"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>