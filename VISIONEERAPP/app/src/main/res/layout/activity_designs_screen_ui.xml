<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".designs_screen_UI">

    <View android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:background="#067381"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/arc_3"/>

    <ImageView android:id="@+id/imageView3"
        android:layout_width="270dp"
        android:layout_height="190dp"
        android:src="@drawable/afdfgdbb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view7"/>

    <androidx.cardview.widget.CardView android:id="@+id/design"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_margin="15dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView6">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView android:id="@+id/uo_design"
                    android:layout_width="170dp"
                    android:layout_height="28dp"
                    android:text="Schematics"
                    android:textAlignment="center"
                    android:textColor="#494848"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="-17dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <ImageView android:id="@+id/Schematics"
            android:layout_width="150dp"
            android:layout_height="95dp"
            android:src="@drawable/blueprint"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView6">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView android:id="@+id/uo_designs"
                    android:layout_width="200dp"
                    android:layout_height="26dp"
                    android:text="layout"
                    android:textAlignment="center"
                    android:textColor="#494848"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <ImageView android:id="@+id/Designs_layout"
            android:layout_width="150dp"
            android:layout_height="95dp"
            android:src="@drawable/plan"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="381dp"
        android:layout_height="198dp"
        android:text="Design Schematic: creates a 2D floor plan image with stable diffusion, showing architectural layouts and room arrangements. Users input parameters like the number of rooms for a custom diffusion-based floor plan.\n \n The Design Floor Plan Layout: function allows users to create a 2D floor plan image, complete with furniture icons, using stable diffusion. Users provide the number of rooms, and the function generates an attractive floor plan representation."
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view7"
        app:layout_constraintVertical_bias="0.361"
        tools:ignore="TextSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>